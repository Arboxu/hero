<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arbo.hero.LoginActivity"
    android:orientation = "vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/my_hero_skins_bg"
    >
    <!---->

    <ImageView
        android:layout_marginTop="10dp"
        android:id ="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/login_logo"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#051311"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="1dp"
            android:background="@drawable/background_login1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/str_loginTitle"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#dfd6d6"

                />
        </LinearLayout>
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <LinearLayout
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_login"
            >
            <LinearLayout
                android:layout_marginTop="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation = "vertical"
                >
                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation = "horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="18sp"
                        android:textColor="#dfd6d6"
                        android:background="@color/transparent"
                        android:text="@string/Str_UsrName"
                        android:id="@+id/text_usr" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#d9cdcd"
                        />
                    <com.arbo.hero.util.ClearEditText
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textColor="#746161"
                        android:id="@+id/UserName"
                        android:hint="@string/str_loginInputHint"
                        android:textColorHint="#878787"
                        android:drawableLeft="@drawable/blank_icon"
                        android:drawableRight="@drawable/common_searchbar_clear"
                        android:background = "@drawable/login_edittext"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e1dddd"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation = "horizontal"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    >
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="18sp"
                        android:textColor="#dfd6d6"
                        android:background="@color/transparent"
                        android:text="@string/Str_UsrPsw"
                        android:id="@+id/text_psw" />
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#d9cdcd"

                        />
                    <com.arbo.hero.util.ClearEditText
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/UserPsw"
                        android:textColor="#4d4c4c"
                        android:drawableLeft="@drawable/blank_icon"
                        android:drawableRight="@drawable/common_searchbar_clear"
                        android:background = "@drawable/login_edittext"
                        android:inputType="textPassword"
                        />
                </LinearLayout>




            </LinearLayout>


            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:id="@+id/LoginLayout"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Str_PswCbx"
                    android:id="@+id/cbx_psw"
                    android:textColor="#b6b0b0"
                    android:button="@drawable/checkbox_item"
                    android:layout_alignBottom="@+id/btn_login"
                    />
                <CheckBox
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/cbx_psw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Str_AutoCbx"
                    android:id="@+id/cbx_autoload"
                    android:textColor="#b6b0b0"
                    android:button="@drawable/checkbox_item"
                    android:layout_alignBottom="@+id/btn_login"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/Str_Login"
                    android:textSize="20sp"
                    android:textColor="#06204f"
                    android:id="@+id/btn_login"
                    android:background="@drawable/login_edittext"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/signUp"
                    android:text="@string/str_loginRegist"
                    android:textSize="14sp"
                    android:textColor="#b6b0b0"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/forgotPSW"
                    android:text="忘记密码？"
                    android:textSize="14sp"
                    android:textColor="#b6b0b0"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.1"
        android:gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "horizontal"
            android:gravity="center"

            >
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#979696"
                android:layout_weight="1.0"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#817c7c"
                android:text="@string/str_loginThird"
                android:layout_weight="1.0"
                />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#979696"
                android:layout_weight="1.0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_weiboloadgin"
                android:background="#00000000"
                android:text="@string/str_loginWeibo"
                android:textSize="12sp"
                android:textColor="#817979"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_weibo64"
                />
            <Button
                android:id="@+id/btn_qqloadgin"
                android:background="#00000000"
                android:text="@string/str_loginQQ"
                android:textSize="12sp"
                android:textColor="#817979"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_qq64"
                />
            <Button
                android:id="@+id/btn_wechatloadgin"
                android:background="#00000000"
                android:text="@string/str_loginWeixin"
                android:textColor="#817979"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_weixin64"
                />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
