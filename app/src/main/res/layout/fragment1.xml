<?xml version="1.0" encoding = "utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/skill_Layout"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/operateskill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 操作技巧"
                android:textSize = "20dp"
                android:textColor= "#000000"
                android:drawableLeft="@drawable/battle_death_icon_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/operateskill"
                android:text=" WeDouyuTV:稳定发育可加一点E配合工资刀，定期用E开视野防止gank"
                android:textSize = "18dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skill_Layout"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 团战思路"
                android:textSize = "20dp"
                android:textColor= "#000000"
                android:drawableLeft="@drawable/battle_death_icon_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/operateskill"
                android:text=" 定期用E开视野防止gank，定期用E开视野防止gank，定期用E开视野防止gank。开个大招，然后射他、射他...."
                android:textSize = "18dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                />

        </LinearLayout>

    </RelativeLayout>






</RelativeLayout>