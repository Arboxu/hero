<?xml version="1.0" encoding = "utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation = "vertical"
    android:layout_marginTop="5dp"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/equip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/fightnum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/eq_img1"
            android:layout_weight="1"
            android:background="@drawable/progress_0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/eq_img2"
            android:layout_weight="1"
            android:background="@drawable/progress_0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/eq_img3"
            android:layout_weight="1"
            android:background="@drawable/progress_0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/eq_img4"
            android:layout_weight="1"
            android:background="@drawable/progress_0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/eq_img5"
            android:layout_weight="1"
            android:background="@drawable/progress_0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/eq_img6"
            android:layout_weight="1"
            android:background="@drawable/progress_0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/good_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/bad_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>